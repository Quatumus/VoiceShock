<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:VoiceShock.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="VoiceShock.Views.WordEditView"
        Title="WordEditView"
        Width="400" Height="300"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="Full"
        x:DataType="viewModels:WordEditViewModel">
    
    <StackPanel Margin="10" Spacing="5">
        <TextBlock Text="{Binding WordText}" FontWeight="Bold" FontSize="16" />
        <ItemsControl ItemsSource="{Binding Shockers}" />
        <Button Content="Close" HorizontalAlignment="Right" Click="OnClose"/>
    </StackPanel>
</Window>